document[
	head[style[default.css]]
	body[
		titlepage[
			textile[
h1. $[document.title]

div(author). by _\.$[document.author]_

div(pubdate). ruby[=Time.now.strftime("%d %B %Y")=]
			]
		]
		contents[
			header[Table of Contents]	
			toc[]
		]
		@[introduction.textile]
		--[=
	
		preface[preface.textile]
		
		chapter[@[chapter1.textile]]
		chapter[@[chapter2.textile]]
	
		index[]
	
		=]
	]
]
