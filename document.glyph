h1. $[document.title]

div(author). by _\.$[document.author]_

div(pubdate). ruby[=Time.now.strftime("%d %B %Y")=]
			]
		]
		toc[]

		--[=
	
		preface[
			header[Preface]
			@[preface.textile]
		]	
		chapter[
			header[Chapter #1]
			@[chapter1.textile]
		]
		chapter[
			header[Chapter #2]
			@[chapter2.textile]
		]
		index[]
	
		=]
	]
]
